    <script>
      document.documentElement.classList.remove("js-off");

      const btn = document.getElementById("menuBtn");
      const menu = document.getElementById("mobileMenu");
      if (btn && menu) btn.addEventListener("click", () => {
        const open = menu.classList.toggle("hidden");
        btn.setAttribute("aria-expanded", open ? "true" : "false");
      });

      const obs = new IntersectionObserver((ents)=>ents.forEach(e=>{ if(e.isIntersecting){ e.target.classList.add("in"); obs.unobserve(e.target); } }), {threshold:.12});
      document.querySelectorAll(".reveal").forEach(el=>obs.observe(el));

      function bindGlow(containerId){
        const el = document.getElementById(containerId);
        if(!el) return;
        el.onmousemove = (e)=>{
          for(const card of el.getElementsByClassName("hp-card")){
            const r = card.getBoundingClientRect();
            card.style.setProperty("--mx", `${e.clientX - r.left}px`);
            card.style.setProperty("--my", `${e.clientY - r.top}px`);
            card.style.setProperty("opacity", "1");
          }
        };
      }
      bindGlow("achieveCards");
      bindGlow("projectCards");

      const orbs = document.querySelectorAll("#orbs .orb");
      let cx = innerWidth/2, cy = innerHeight/2, mx = cx, my = cy;
      function tick(){ const dx = mx - cx, dy = my - cy; orbs.forEach(o=>{ const d=parseFloat(o.dataset.depth||"0.05"); o.style.transform=`translate(${dx*d}px,${dy*d}px)`; }); }
      addEventListener("mousemove", e=>{ mx = e.clientX; my = e.clientY; requestAnimationFrame(tick); });
      addEventListener("resize", ()=>{ cx = innerWidth/2; cy = innerHeight/2; });
      tick();
    </script>
