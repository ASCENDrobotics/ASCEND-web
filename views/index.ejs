    <style>
      html { scroll-behavior: smooth; }
      .js-off .reveal { opacity: 1 !important; transform: none !important; }
      .reveal { opacity: 0; transform: translateY(12px); transition: opacity .6s ease, transform .6s ease; }
      .reveal.in { opacity: 1; transform: translateY(0); }


      :root{
        --bg: #0b0b12;
        --card: #151627;           
        --card-outline: rgba(255,255,255,.08);
        --glow-1: rgba(255,255,255,.06);
        --glow-2: rgba(255,255,255,.35); 
      }

      .hp-cards:hover > .hp-card::after { opacity: 1; }
      .hp-card{
        position: relative;
        border-radius: 16px;
        height: 220px;
        cursor: default;
      }
      .hp-card::before,
      .hp-card::after{
        content:"";
        position:absolute; inset:0;
        border-radius: inherit;
        opacity:0; transition: opacity 420ms;
      }

      .hp-card::before{
        background: radial-gradient(600px circle at var(--mx) var(--my), var(--glow-1), transparent 40%);
        z-index: 2;
      }

      .hp-card::after{
        background: radial-gradient(520px circle at var(--mx) var(--my), var(--glow-2), transparent 40%);
        z-index: 0;
      }
      .hp-card > .hp-content{
        position:absolute; inset:1px; z-index:1;
        border-radius: inherit;
        background: var(--card);
        border: 1px solid var(--card-outline);
        display:flex; flex-direction:column; padding:18px;
      }

      .hp-icon{
        display:flex; align-items:center; justify-content:center;
        width:48px; height:48px; border-radius:12px;
        background: rgba(255,255,255,.06);
      }
      .hp-eyebrow{ font-size:.75rem; color:rgba(255,255,255,.6); }
      .hp-title{ font-weight:700; }
      .hp-sub{ font-size:.9rem; color:rgba(255,255,255,.7); }

      .orb { position:absolute; border-radius:9999px; filter: blur(60px); opacity:.38; mix-blend-mode:screen;
             animation: pulse 8s ease-in-out infinite, drift 22s ease-in-out infinite; }
      .orb--1 { width:520px; height:520px; background: radial-gradient(closest-side, #D5006D, transparent 70%); top:-140px; left:-120px; animation-duration: 10s, 26s; }
      .orb--2 { width:620px; height:620px; background: radial-gradient(closest-side, #FFB300, transparent 70%); right:-160px; top:120px;  animation-duration: 12s, 30s; }
      .orb--3 { width:460px; height:460px; background: radial-gradient(closest-side, #673AB7, transparent 70%); left:42%; bottom:-180px; animation-duration: 14s, 34s; }
      @keyframes pulse { 0%,100% { transform: scale(1); } 50% { transform: scale(1.06); } }
      @keyframes drift { 0%,100% { filter: blur(60px); } 50% { filter: blur(72px); } }
    </style>
  </head>

